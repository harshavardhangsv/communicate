            <div class="questions row">
                <div class="col-md-offset-1 col-md-4">
                        <input id="complex_sentence_tagging_checkbox" class="js-switch" type="checkbox" required>
                        <label for="complex_sentence_tagging_checkbox">Mark Complex Sentences</label>
                </div>
                <div class="col-md-6">
                        <input id="proper_noun_tagging_checkbox" class="js-switch" type="checkbox" required>
                        <label for="proper_noun_tagging_checkbox">Tag Proper Nouns</label>
